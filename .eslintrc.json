{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": ["airbnb-base", "eslint:recommended", "prettier"],
	"plugins": ["eslint-plugin-prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"quotes": ["error", "single"],
		// "no-console": "warn",
		"no-underscore-dangle": "off",
		"prettier/prettier": ["error", { "endOfLine": "auto" }],

		// TODO: remove these temp rules
		"no-console": "off",
		"import/no-cycle": "off"
	}
}
