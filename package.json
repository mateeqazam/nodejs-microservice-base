{
	"name": "pribox-campaign-simulation",
	"version": "0.0.1-development",
	"description": "A microservice to simulate campaigns",
	"main": "src/index.js",
	"private": true,
	"scripts": {
		"dev": "nodemon --exec babel-node --inspect src/index.js",
		"build": "babel src -d dist",
		"serve": "node dist/index.js",
		"start:dev": "npm run build && nodemon dist/index.js",
		"start:prod": "npm run build && npm run serve",
		"script": "babel-node src/scripts/run.js",
		"lint": "eslint . --ext .js",
		"lint:fix": "eslint --fix . --ext .js",
		"prettier": "prettier --check src/**/*.js",
		"prettier:fix": "prettier --write src/**/*.js",
		"format": "yarn prettier:fix && yarn lint:fix"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pursuetoday/pribox.campaign-simulator.git"
	},
	"author": {
		"name": "Muhammad Ateeq Azam",
		"email": "contact@ateeqazam.me"
	},
	"dependencies": {
		"@bull-board/api": "5.8.4",
		"@bull-board/express": "^5.8.4",
		"@bull-board/ui": "5.8.4",
		"bullmq": "^4.12.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"lodash": "^4.17.21",
		"moment": "^2.29.4",
		"mongoose": "^7.5.3",
		"node-fetch": "^3.3.2",
		"node-schedule": "^2.1.1",
		"path": "^0.12.7",
		"promise-limit": "^2.7.0",
		"redis": "^4.6.10"
	},
	"devDependencies": {
		"@babel/cli": "^7.23.0",
		"@babel/core": "^7.23.0",
		"@babel/node": "^7.22.19",
		"@babel/preset-env": "^7.22.20",
		"eslint": "^8.50.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-prettier": "^5.0.0",
		"nodemon": "^3.0.1",
		"prettier": "^3.0.3"
	}
}
